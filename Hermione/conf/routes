# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.newGame(score: Int=0)
GET     /login                      controllers.Authentication.login
POST    /login                      controllers.Authentication.authenticate
GET     /logout                     controllers.Authentication.logout
POST    /logout                     controllers.Authentication.logout
GET     /newGame/:score             controllers.Application.newGame(score: Int)
GET     /current/reload             controllers.Application.reloadBoard
GET     /scores                     controllers.Application.scores
GET     /progress                   controllers.Application.progress

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
